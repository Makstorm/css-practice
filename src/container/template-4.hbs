   

<header class='header'>
    <div>
        {{> logo}}
    </div>

    <nav class='header-nav'>
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<main class="hero">
    <img src="{{image}}" alt="hero main image" class="hero_image">
    <div class="hero_info">
        <h1 class="hero_title">{{heading}}</h1>
        <p class="hero_text">{{descriotion}}</p>
        <a href="{{href}}" class="button hero_button">{{button}}</a>
    </div>
</main>
{{/with}}


<div class="featured">
    {{#each featured}}
        <div class="featured_card">
            <div class="featured_image" style="background-image: url({{photo}});"></div>
            <h2 class="featured_title">{{heading}}</h2>
            <p class="featured_info">{{info}}</p>
            <a href="{{linkUrl}}" class="featured_link">{{linkText}}</a>
        </div>
    {{/each}}
</div>

<div class="actions">
    {{#each actions}}
        <div class="action_card">
            <h3 class="action_title">{{heading}}</h3>
            <a href="{{url}}" class="button action_button">{{text}}</a>
        </div>
    {{/each}}
</div>




<footer class="footer">
    <div class="col-3">
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
        <div class="col-3">
            <span class="footer_title">{{title}}</span>
            {{> nav list=links isVertical=true}}
        </div>
    {{/each}}
</footer>

